<form method="post">
	<nav class="nav-h navbar navbar-expand-md bg-green ">

		<div class="container-fluid p-0">

			<ul class="navbar-nav text-center align-items-center ">

				{% for i in range(0,8) %}

					<li class="col-2 me-3 nav-item">

						{% if subjectId == subjects[i].id %}
							<a class="nav-link hover fs-6 bg-clair text-color-green" href="/subject/show?id={{ subjects[i].id }}">{{ subjects[i].name|upper }}</a>
						{% else %}
							<a class="nav-link text-color-clair fs-6" href="/subject/show?id={{ subjects[i].id }}">{{ subjects[i].name|upper }}</a>
						{% endif %}

					</li>

				{% endfor %}
			</ul>

			<ul class="navbar-nav align-items-center">>
				{% if subjects|length > 9 %}

					<li class="nav-item dropdown me-5">
						<a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
							<span class="bg-clair navbar-toggler-icon"></span>
						</a>

						<ul class="dropdown-menu bg-green">
							{% for i in range(9,subjects|length-1) %}
								<li>
									<a class="menu-item text-color-white nav-link fs-6" href="/subject/show?id={{ subjects[i].id }}">{{ subjects[i].name|upper }}</a>
								</li>

							{% endfor %}

						</ul>
					</li>

				{% endif %}


				{% if (subjectId is defined) %}
					<input type="hidden" name="id" value="{{ subjectId }}"/>
					<a class="" href="/subject/add">📝</a>
					<a class="ms-3" href="/subject/edit?id={{subjectId}}">🛠</a>
					<input
					type="submit" class="ms-3 me-3" name="delete" value="🧻">
					{# <a class="ms-3 me-3 " href="/subject/delete?id={{subjectId}}">🧻</a> #}
				{% else %}
					<a class="me-5" href="/subject/add">📝</a>
				{% endif %}

			</ul>
		</div>
	</nav>
</form>
