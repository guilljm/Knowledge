<form method="post">
	<div
		class="body-h aside-w bg-clair position-fixed">

		{# {% if validationMessage is defined %}
									<div class="alert alert-dismissible alert-success">
										<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
										<strong>{{validationMessage}}</strong>
									</div>
								{% endif %} #}

		{% for subject in subjects %}
			{% if (subject.id == subjectId) %}
				<p class="mt-3 fs-5 text-center text-color-green">
					<strong>{{ subjectname }}</strong>
				</p>
			{% endif %}
		{% endfor %}

		<div class="row me-0 mt-1 list-group">
			{% set first = 1 %}

			{% if subjectId is defined %}
				<div class="d-flex align-items-center justify-content-between list-group-item border-0 bg-green list-group-item-action active">
					<p class="h5 mt-1">Notions</p>
					<a href="/notion/add?subjectid={{ subjectId }}">📝</a>
				</div>
			{% endif %}

			<div class="overflow-auto me-0 notion-list">
				{% for notionitem in notions %}

					{% if notion.id == notionitem.id %}
						<div class="list-group-item bg-light-grey border-top-0 d-flex align-items-center justify-content-between">
							<a class="text-color-green" href="/notion/show?id={{notionitem.id}}">
								<strong>{{ notionitem.name}}</strong>
							</a>

							<input type="hidden" name="id" value="{{ notionitem.id }}"/>

							<div>
								<a class="fs-5" href="/notion/edit?id={{notionitem.id}}">🛠</a>
								{# <a class="fs-5" href="/notion/delete?id={{notionitem.id}}">🧻</a> #}
								<input type="submit" class="fs-5" name="delete" value="🧻">
							</div>
						</div>
					{% else %}
						<div class="list-group-item bg-clair">
							{% if first %}
								<a class="hover text-color-green pe-5" href="/notion/show?id={{notionitem.id}}">{{ notionitem.name}}</a>
							{% else %}
								<a class="hover border-top-0 pe-5 text-color-green" href="/notion/show?id={{notionitem.id}}">{{ notionitem.name}}</a>
							{% endif %}
						</div>
					{% endif %}

					{% set first = 0 %}
				{% endfor %}
			</div>

		</div>
	</div>
</form>
