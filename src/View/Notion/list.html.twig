<form method="post">
	<div class="main-frame weight-300 bg-clair position-fixed">
		{# {% for subject in subjects %}
			{% if (subject.id == subjectId) %} #}
				<p class="mt-3 fs-5 text-center text-color-green">
					{# <strong>{{ subjectname }}</strong> #}
					<strong>{{ subjectSelected.name }}</strong> 
				</p>
			{# {% endif %}
		{% endfor %} #}
		<div class="mt-1">
			{% if subjectSelected is defined %}
				<div class="d-flex align-items-center justify-content-between border-0 bg-green">
					<p class="h5 p-2 mt-1 text-color-clair">Notions</p>
					<a class="fs-6 me-3" href="/notion/add?subjectid={{ subjectSelected.id }}">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-plus-square" viewbox="0 0 16 16">
							<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
							<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
						</svg>
					</a>
				</div>
			{% endif %}
			<div class="list-group overflow-auto notion-list">
				{% for notionitem in notions %}
					{% if notionSelected.id == notionitem.id %}
						<div class="list-group-item bg-light-grey d-flex align-items-center justify-content-between">
							<a class="text-color-green" href="/notion/show?id={{notionitem.id}}">
								<strong>{{ notionitem.name}}</strong>
							</a>
							<input type="hidden" name="id" value="{{ notionitem.id }}"/>
							<div>
								<a class="fs-6 me-2" href="/notion/edit?id={{notionitem.id}}">
									<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="dark" class="bi bi-pencil" viewbox="0 0 16 16">
										<path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
									</svg>
								</a>
								<a type="submit" class="fs-6" name="delete" onclick="myFunction('/notion/delete', {{notionitem.id}})">
									<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="dark" class="bi bi-trash" viewbox="0 0 16 16">
										<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
										<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
									</svg>
								</a>
							</div>
						</div>
					{% else %}
						<div class="list-group-item bg-clair">
							{% if loop.first %}
								<a class="hover text-color-green " href="/notion/show?id={{notionitem.id}}">{{ notionitem.name}}</a>
							{% else %}
								<a class="hover border-top-0  text-color-green" href="/notion/show?id={{notionitem.id}}">{{ notionitem.name}}</a>
							{% endif %}
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
</form>
