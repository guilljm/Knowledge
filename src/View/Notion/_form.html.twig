<form method="post" enctype="multipart/form-data">
	<div
		class="container-fluid bg-clair">

		{# {% if validationMessage != "" %}
							<div class="alert alert-dismissible alert-success">
								<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
								<strong>{{validationMessage}}</strong>
								{% if titleForm == "Ajouter une nouvelle notion" %}
									<strong>Vous pouvez</strong>
									<a class="me-2" href="/exercise/add?notionId={{notionId}}">ajouter un exercice</a>
								{% endif %}
							</div>
						{% endif %} #}

		<div class="row d-flex justify-content-center">
			{% if notionId is defined %}
				<a class="text-end" href="/notion/show?id={{notionId}}">retour à la page précédente</a>
			{% else %}
				<a class="text-end" href="/subject/show?id={{subjectId}}">retour à la page précédente</a>
			{% endif %}
		</div>

		<p class="pt-4 text-center h1 bg-clair">{{  titleForm }}</p>

		<div class="row d-flex justify-content-center ">

			<div class="col-8">

				<div class="mt-5 input-group input-group-lg">
					<span class="col-4 input-group-text fs-4 text-color-clair bg-green">
						Nom de la notion
					</span>
					<input type="text" class="form-control" name="notion" value="{{ notionName }}">
				</div>

				{% if nameErrors is not empty %}
					<div class="alert alert-dismissible alert-primary">
						<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
						{% for error in nameErrors %}
							<strong>{{error}}</strong>
						{% endfor %}
					</div>
				{% endif %}

				<div class="mt-5 form-group">
					<label class="col-4 mb-0 rounded-top rounded-0 input-group-text fs-4 text-color-clair bg-green form-label mt-4">Lecon</label>
					<textarea class="form-control rounded-0 rounded-bottom" rows="6" name="lesson">{{ lesson }}</textarea>
				</div>

				<div class="mt-5 form-group">
					<label class="col-4 input-group-text fs-4 text-color-clair bg-green form-label mt-4">Exemple</label>
					<textarea class="form-control rounded-0 rounded-bottom" rows="6" name="sample">{{ sample }}</textarea>
				</div>

				<div class="mt-2 form-group">
					<input class="form-file form-control" type="file" name="filename">
				</div>

				{% if fileErrors is not empty %}
					<div class="alert alert-dismissible alert-primary">
						<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
						{% for error in fileErrors %}
							<strong>{{error}}</strong>
						{% endfor %}
					</div>
				{% endif %}

			</div>
		</div>

		<div class="row d-flex mt-5 mb-5 justify-content-center">

			<div
				class="col-8">
				{# <button type="submit" class="mb-5 w-25 btn btn-lg btn-primary" value="Annuler" name="button">Annuler</button> #}
				<button type="submit" class="mb-5 w-100 btn btn-lg btn-primary" value="Valider" name="button">Valider</button>
			</div>
		</div>

	</div>
</form>
