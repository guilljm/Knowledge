<form method="post" enctype="multipart/form-data">
	<div class="container-fluid main-frame bg-clair overflow-auto">
		<div class="row d-flex justify-content-center">
			{% if notion.id is defined %}
				<a class="text-end" href="/notion/show?id={{notion.id}}">retour à la page précédente</a>
			{% else %}
				<a class="text-end" href="/subject/show?id={{subjectId}}">retour à la page précédente</a>
			{% endif %}
		</div>
		<p class="pt-4 text-center h1 bg-clair">{{ titleForm }}</p>
		<div class="row d-flex justify-content-center ">
			<div class="col-8">
				<div class="mt-5 input-group input-group-lg">
					<span class="col-4 input-group-text fs-4 text-color-clair bg-green">
						Nom de la notion
					</span>
					<input type="text" class="form-control" name="name" value="{{ notion.name }}">
				</div>
				{% if errors is not empty %}
					<div class="alert alert-dismissible alert-primary">
						<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
						{% for error in errors %}
							<strong>{{error}}</strong>
						{% endfor %}
					</div>
				{% endif %}
				<div class="mt-5 form-group">
					<label class="col-4 mb-0 rounded-top rounded-0 input-group-text fs-4 text-color-clair bg-green form-label mt-4">Description</label>
					<textarea class="form-control rounded-0 rounded-bottom" rows="5" name="description">{{ notion.description }}</textarea>
				</div>
				<div class="mt-5 form-group">
					<label class="col-4 mb-0 rounded-top rounded-0 input-group-text fs-4 text-color-clair bg-green form-label mt-4">Exemple</label>
					<textarea class="form-control rounded-0 rounded-bottom" rows="5" name="sample">{{ notion.sample }}</textarea>
				</div>
				<div class="mt-2 form-group">
					<input class="form-file form-control" type="file" name="filename">
				</div>
				{% if fileErrors is not empty %}
					<div class="alert alert-dismissible alert-primary">
						<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
						{% for error in fileErrors %}
							<strong>{{error}}</strong>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>
		<div class="row d-flex mt-5 mb-5 justify-content-center">
			<div class="col-8">
				<button type="submit" class="mb-5 w-100 btn btn-lg btn-primary" value="Valider" name="button">Valider</button>
			</div>
		</div>
	</div>
</form>
