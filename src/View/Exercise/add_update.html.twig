{% extends 'Layout/index.html.twig' %}

{% block title %}
	Exercice
{% endblock %}


{% block css %}{% endblock %}


{% block content %}
	<form method="post">
		<div class="container-fluid body-h bg-clair">

			<div class="row d-flex justify-content-center align-items-center h-100">

				<div class="col-8 bg-white h-75 rounded-5">

					<p class="mt-5 h2 text-center">
						Completez les champs ci-dessous
					</p>

					<div class="row h-25 mt-5 ms-5 pe-5 justify-content-center align-items-center">
						<div class="input-group input-group-lg">
							<span class="col-4 input-group-text fs-4 text-color-clair bg-green">
								Nom de l'exercice
							</span>
							<input type="text" class="form-control" name="name" placeholder="nom exercice" value="{{ name }}">
						</div>
					</div>

					<div class="row h-25 ms-5 pb-5 pe-5 justify-content-center align-items-center">
						<div class="input-group input-group-lg">
							<span class="col-4 input-group-text fs-4 text-color-clair bg-green">
								URL
							</span>
							<input type="text" class="form-control" name="url" placeholder="url" value="{{ url }}">
						</div>
					</div>

					<div class=" row d-flex mt-5 mb-0 justify-content-around">
						<button type="submit" class="w-25 btn btn-lg btn-primary" value="Annuler" name="button">Annuler</button>
						<button type="submit" class="w-25 btn btn-lg btn-primary" value="Valider" name="button">Valider</button>

					</div>

				</div>
			</div>
		</div>
	</form>
{% endblock %}
