<form method="post">
	<div
		class="container-fluid body-h bg-clair">
		{# 
						{% if validationMessage != "" %}
							<div class="alert alert-dismissible alert-success">
								<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
								<strong>{{validationMessage}}</strong>
							</div>
						{% endif %} #}

		<div class="row d-flex justify-content-center">
			<a class="text-end" href="/notion/show?id={{notionId}}">retour à la page précédente</a>
		</div>

		<div class="row d-flex justify-content-center align-items-center h-100">

			<div class="col-8 bg-white h-75 rounded-5">

				<p class="fs-1 pt-4 text-center">{{  titleForm }}</p>

				<div class="row h-25 mt-5 ms-5 pe-5 justify-content-center align-items-center">
					<div class="input-group input-group-lg">
						<span class="col-4 input-group-text fs-4 text-color-clair bg-green">
							Nom de l'exercice
						</span>
						<input type="text" class="form-control" name="name" value="{{ name }}">
					</div>
				</div>

				{% if nameErrors is not empty %}
					<div class="alert alert-dismissible alert-primary">
						<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
						{% for error in nameErrors %}
							<strong>{{error}}</strong>
						{% endfor %}
					</div>
				{% endif %}

				<div class="row h-25 ms-5 pb-5 pe-5 justify-content-center align-items-center">
					<div class="input-group input-group-lg">
						<span class="col-4 input-group-text fs-4 text-color-clair bg-green">
							URL
						</span>
						<input type="text" class="form-control" name="url" value="{{ url }}">
					</div>
				</div>


				{% if urlErrors is not empty %}
					<div class="alert alert-dismissible alert-primary">
						<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
						{% for error in urlErrors %}
							<strong>{{error}}</strong>
						{% endfor %}
					</div>
				{% endif %}

				<div class="row d-flex mt-5 mb-5 justify-content-center">
					<div
						class="col-8">
						{# <button type="submit" class="mb-5 w-25 btn btn-lg btn-primary" value="Annuler" name="button">Annuler</button> #}
						<button type="submit" class="mb-5 w-100 btn btn-lg btn-primary" value="Valider" name="button">Valider</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
